                                </button>
                              </div>
                            </div>
                          </div>
                        </div>
                        <!-- Controls -->
                        <div class="row mt-2">
                          <div class="col-2">
                            <button id="wizardPrev" class="btn btn-sm btn-link text-inverse text-opacity-75 text-decoration-none p-0" type="button" title="Previous">
                              <i class="fa fa-arrow-left fa-fw me-1 text-theme"></i> Previous
                            </button>
                          </div>
                          <div class="col-2 offset-1">
                            <button id="wizardNext" class="btn btn-sm btn-link text-inverse text-opacity-75 text-decoration-none p-0" type="button" title="Next">
                              <i class="fa fa-arrow-right fa-fw me-1 text-theme"></i> Next
                            </button>
                          </div>
                        </div>
                      </div>
                      <div class="card-arrow">
                        <div class="card-arrow-top-left"></div>
                        <div class="card-arrow-top-right"></div>
                        <div class="card-arrow-bottom-left"></div>
                        <div class="card-arrow-bottom-right"></div>
                      </div>
                    </div>
                    <div class="card-arrow">
                      <div class="card-arrow-top-left"></div>
                      <div class="card-arrow-top-right"></div>
                      <div class="card-arrow-bottom-left"></div>
                      <div class="card-arrow-bottom-right"></div>
                    </div>
                  </div>
                </div>
                <script>
                  (function () {
                    var current = 0;
                    var steps = Array.prototype.slice.call(document.querySelectorAll('#wizardContent .wizard-step'));
                    var headerLinks = Array.prototype.slice.call(document.querySelectorAll('#wizardHeader .nav-link'));
                    var prevBtn = document.getElementById('wizardPrev');
                    var nextBtn = document.getElementById('wizardNext');
                    function render() {
                      steps.forEach(function (el, i) {
                        el.classList.toggle('active', i === current);
                      });
                      headerLinks.forEach(function (a, i) {
                        a.classList.remove('active', 'completed', 'disabled');
                        if (i < current) a.classList.add('completed');
                        if (i === current) a.classList.add('active');
                        if (i > current) a.classList.add('disabled');
                      });
                      prevBtn.disabled = current === 0;
                      nextBtn.innerHTML = current === steps.length - 1
                        ? '<i class="fa fa-check fa-fw me-1 text-theme"></i> Finish'
                        : '<i class="fa fa-arrow-right fa-fw me-1 text-theme"></i> Next';
                      nextBtn.title = current === steps.length - 1 ? 'Finish' : 'Next';
                    }
                    function goTo(index) {
                      if (index < 0 || index >= steps.length) return;
                      current = index;
                      render();
                    }
                    headerLinks.forEach(function (a) {
                      a.addEventListener('click', function () {
                        var idx = parseInt(a.getAttribute('data-step'), 10);
                        // Allow jumping only to current or previous+1 for basic UX
                        if (idx <= current + 1) goTo(idx);
                      });
                    });
                    prevBtn.addEventListener('click', function () { goTo(current - 1); });
                    nextBtn.addEventListener('click', function () {
                      if (current === steps.length - 1) {
                        // submit or finish action placeholder
                        return;
                      }
                      goTo(current + 1);
                    });
                    // Initial render
                    render();
                  })();
                </script>
                <!-- END #wizardLayout1 (rebuilt) -->
