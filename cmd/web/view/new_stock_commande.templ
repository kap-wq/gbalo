                                  <option value="Sales">Sales</option>
                                  <option value="Marketing">Marketing</option>
                                </select>
                              </div>
                            </div>
                          </div>
                          <!-- Step 1: Store -->
                          <div class="wizard-step" data-step="1">
                            <div class="row mb-2">
                              <label class="col-2">Warehouse:</label>
                              <div class="col-7">
